<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterShop"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/header_rect">

        <ImageButton
            android:id="@+id/bkbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:background="@null"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Register Shop"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="35dp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ownername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/whiterect"
                    android:hint="Owner Name"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:drawableStart="@drawable/account"
                    android:drawablePadding="10px" />



                <EditText
                    android:id="@+id/textshopname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/whiterect"
                    android:hint="Shop Name"
                    android:layout_below="@+id/ownername"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:drawableStart="@drawable/account"
                    android:drawablePadding="10px" />


                <EditText
                    android:id="@+id/textphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textshopname"
                    android:background="@drawable/whiterect"
                    android:hint="Phone"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:drawableStart="@drawable/ic_baseline_phone_24"
                    android:drawablePadding="10px"/>

                <EditText
                    android:id="@+id/textemailId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textphone"
                    android:layout_margin="10dp"
                    android:background="@drawable/whiterect"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:drawablePadding="10px"
                    android:hint="Email"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/textaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textemailId"
                    android:layout_margin="10dp"
                    android:background="@drawable/whiterect"
                    android:drawableStart="@drawable/ic_baseline_location_on_24"
                    android:drawablePadding="10px"
                    android:hint="Complete Address"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/textcity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textaddress"
                    android:layout_margin="10dp"
                    android:background="@drawable/whiterect"
                    android:drawableStart="@drawable/ic_baseline_location_on_24"
                    android:drawablePadding="10px"
                    android:hint="City"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/textpassword"
                    android:layout_below="@+id/textcity"
                    android:background="@drawable/whiterect"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:drawablePadding="10px"/>

                <EditText
                    android:id="@+id/textconfpass"
                    android:layout_below="@+id/textpassword"
                    android:background="@drawable/whiterect"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:drawablePadding="10px"/>

                <Button
                    android:id="@+id/regshop"
                    android:layout_below="@+id/textconfpass"
                    android:layout_centerHorizontal="true"
                    android:minWidth="200dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"/>


            </RelativeLayout>



    </ScrollView>

</LinearLayout>