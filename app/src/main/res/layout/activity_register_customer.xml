<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterCustomer"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:padding="10dp"/>

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="100dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/textname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/whiterect"
                    android:hint="Full Name"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:drawableStart="@drawable/account"
                    android:drawablePadding="10px"
                    android:textColorHint="@color/black"
                    android:singleLine="true"/>

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textname"
                    android:background="@drawable/whiterect"
                    android:hint="Phone"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:drawableStart="@drawable/ic_baseline_phone_24"
                    android:drawablePadding="10px"
                    android:textColorHint="@color/black"
                    android:singleLine="true"/>

                <EditText
                    android:id="@+id/textemailId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phone"
                    android:layout_margin="10dp"
                    android:background="@drawable/whiterect"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:drawablePadding="10px"
                    android:hint="Email"
                    android:padding="10dp"
                    android:textColorHint="@color/black"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"/>

                <EditText
                    android:id="@+id/textaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textemailId"
                    android:layout_margin="10dp"
                    android:background="@drawable/whiterect"
                    android:drawableStart="@drawable/ic_baseline_location_on_24"
                    android:drawablePadding="10px"
                    android:hint="Complete Address"
                    android:padding="10dp"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/textpassword"
                    android:layout_below="@+id/textaddress"
                    android:background="@drawable/whiterect"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:hint="Password"
                    android:drawablePadding="10px"
                    android:textColorHint="@color/black"
                    android:singleLine="true"
                    android:inputType="textPassword"/>

                <EditText
                    android:id="@+id/textconfpass"
                    android:layout_below="@+id/textpassword"
                    android:background="@drawable/whiterect"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:hint="Confirm Password"
                    android:drawablePadding="10px"
                    android:textColorHint="@color/black"
                    android:singleLine="true"
                    android:inputType="textPassword"/>

                <Button
                    android:id="@+id/regbtn"
                    android:layout_below="@+id/textconfpass"
                    android:layout_centerHorizontal="true"
                    android:minWidth="180dp"
                    android:layout_marginTop="40dp"
                    android:text="Register"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/regvendor"
                    android:layout_below="@+id/regbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Are you an Seller? Register"
                    android:textStyle="italic"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"/>

            </RelativeLayout>

        </ScrollView>



    </RelativeLayout>






</LinearLayout>

